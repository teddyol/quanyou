.search-box .searchbar-result{
  margin-top:0;
}
.search-box .weui-search-bar__label .weui-icon-search{
  margin-top:6rpx;
}
.swiper{
  height:240rpx;
  margin:30rpx;
 }
.swiper .slide-image{
  width:100%;
  height:100%;
   border-radius:10rpx;
}
.shortcut{
  margin-bottom:30rpx;
}
.shortcut .iconfont{
  display:inline-block;
  width:90rpx;
  height:90rpx;
  border-radius:50%;
  margin-bottom:10rpx;
}
.hot-article{
  margin:0 30rpx;
  padding:30rpx;
  border-radius:10rpx;
}
.hot-article .label{
  position:absolute;
  top:40rpx;
  right:40rpx;
  padding:0 10rpx;
  border-radius:10rpx;
  z-index:1;
}
.hot-article image{
  width:100%;
  height:240rpx;
  border-radius:10rpx;
}
.knowledge{
  padding:30rpx;
}
.knowledge .weui-panel_access::before,
.knowledge .weui-panel_access::after,
.knowledge .weui-panel__hd::after,
.knowledge .weui-panel__bd .weui-media-box::before{
  border:none;
}
.knowledge .weui-panel_access,
.knowledge .weui-media-box__thumb{
  border-radius:10rpx;
  overflow:hidden;
}